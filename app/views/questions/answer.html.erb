<!-- app/views/questions/answer.html.erb -->
<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-sm">
        <div class="card-body">
          <h1 class="card-title text-center">Coach's Response</h1>
          <p class="lead text-center"><strong>Your question:</strong> <%= params[:question] %></p>
          <hr>
          <p class="text-center text-muted"><strong>Coach says:</strong> <%= @answer %></p>
          <div class="text-center mt-4">
            <%= link_to "Ask another question", ask_path, class: "btn btn-outline-primary" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
